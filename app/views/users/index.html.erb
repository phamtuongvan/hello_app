<% provide(:title, 'Users') %>

<h1>Listing Users</h1>

<table class="table table-inverse">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Email</th>
      <th>Password</th>
      <th>Created At</th>
      <th>Updated At</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.password_digest %></td>
        <td><%= user.created_at %></td>
        <td><%= user.updated_at %></td>
        <td colspan="2"><%= link_to 'Show', user,class: 'btn btn-primary' %>  <%= link_to 'Edit', edit_user_path(user),class: 'btn btn-primary' %>  <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } ,class: 'btn btn-primary'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path,class: 'btn btn-warning' %>
